{
  "manifest_version": 3,
  "name": "Paper Analyzer",
  "version": "1.0.1",
  "author": "Mian Ali Ahmed",
  "description": "Analyzes research papers across timelines and provides insights.",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://scholar.google.com/citations*"],
      "run_at": "document_idle",
      "js": ["chart.min.js", "Analyzer.js"]
    }
  ],
  "permissions": ["nativeMessaging", "storage", "activeTab", "scripting"],
  "host_permissions": ["https://scholar.google.com/*"]
}
